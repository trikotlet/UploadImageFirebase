<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anupriya.uploadimagefirebase.MainActivity">

    <Button
        android:id="@+id/browseBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="111dp"
        android:layout_marginStart="111dp"
        android:text="Browse Image" />

    <ImageView
        android:id="@+id/up_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="77dp"
        android:layout_marginStart="77dp"
        app:srcCompat="@android:drawable/dialog_frame"
        android:layout_below="@+id/browseBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/imageName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:ems="10"
        android:hint="Product Name"
        android:inputType="textPersonName"
        android:layout_below="@+id/up_image"
        android:layout_alignRight="@+id/browseBtn"
        android:layout_alignEnd="@+id/browseBtn"
        android:layout_marginRight="7dp"
        android:layout_marginEnd="7dp" />

    <Button
        android:id="@+id/addbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:layout_below="@+id/productDescription"
        android:layout_marginTop="12dp"
        android:layout_alignRight="@+id/productDescription"
        android:layout_alignEnd="@+id/productDescription" />

    <EditText
        android:id="@+id/imagePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Product Price"
        android:inputType="textPersonName"
        android:layout_below="@+id/imageName"
        android:layout_alignLeft="@+id/imageName"
        android:layout_alignStart="@+id/imageName"
        android:layout_marginTop="12dp" />

    <EditText
        android:id="@+id/productDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Description"
        android:inputType="textPersonName"
        android:layout_below="@+id/imagePrice"
        android:layout_alignLeft="@+id/imagePrice"
        android:layout_alignStart="@+id/imagePrice" />

    <Button
        android:id="@+id/viewBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/addbtn"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:text="View Data" />
</RelativeLayout>
